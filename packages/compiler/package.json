{
  "name": "@contractshark/compiler",
  "version": "0.17.1",
  "description": "Solidity contract compiler for ContractShark framework.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npx tsc",
    "test": "npx nyc npx ava --verbose"
  },
  "ava": {
    "concurrency": 1,
    "require": [
      "ts-node/register"
    ],
    "extensions": [
      "ts"
    ],
    "files": [
      "src/tests/*.test.ts",
      "src/tests/**/*.test.ts"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "src/tests"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@0xcert/ethereum-utils-contracts": "2.0.1",
    "@types/fs-extra": "9.0.6",
    "@types/node": "13.13.4",
    "ava": "3.8.1",
    "nyc": "15.0.1",
    "solc": "0.6.1",
    "ts-node": "8.10.1",
    "typescript": "3.8.3"
  },
  "dependencies": {
    "@contractshark/flattener": "0.17.1",
    "@contractshark/reporter": "0.10.0",
    "fast-glob": "3.2.2",
    "fs-extra": "9.0.0"
  },
  "peerDependencies": {
    "solc": "*"
  }
}
